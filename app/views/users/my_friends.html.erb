<%#= render 'friends/lookup' %>
<%if @friendships.size > 0 %>
  <table class="table table-striped">
   <thead>
    <tr>
      <th colspan="3" class="page-header">
        <h2> My friends </h2>
      </th>
    </tr>
    <tr>    
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
     
    </tr>

  </thead>
  <tbody>
    <% @friendships.each do |friendship| %>
	  	<tr>
	  	  <td><%= friendship.full_name %></td>
	  	  <td><%= friendship.email %></td>
	  	  
	  	  <td><%= link_to "View Profile", user_path(friendship), class: "btn btn-sm btn-primary" %>
	  	  
		  	  <%= link_to "Remove", friendship_path(friendship), :method => :delete,
		  	                                      :data => {:confirm => "are you sure?"},
		  	                                      :class => "btn btn-sm btn-danger" %>
	  	  </td>                                    
	  	                                     
	    </tr>
    <% end %>
  </tbody>
 </table>  
<% else %>
  <div class="row col-lg-12">
    <p class="lead"> You dont have friends yet . Please add some!</p>
  </div>  
<% end %>
